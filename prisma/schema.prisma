// ==================== CONFIGURATION ====================

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  OWNER
  ADMIN
  VIEWER
}

enum UserStatus {
  ACTIVE
  PENDING
}

enum AgentStatus {
  ACTIVE
  INACTIVE
}

enum CallerType {
  INBOUND
  OUTBOUND
}

enum CampaignStatus {
  DRAFT
  PLANNED
  CONTINUING
  COMPLETED
  STOPPED
}

enum CallStatus {
  COMPLETED
  FAILED
  MISSED
  IN_PROGRESS
}

enum CallType {
  INBOUND
  OUTBOUND
}

enum KnowledgeBaseStatus {
  PROCESSING
  READY
  ACTIVE
  EMPTY
}

enum DocumentType {
  FILE
  WEBSITE
  TEXT
}

enum DocumentStatus {
  PROCESSING
  READY
  ERROR
}

enum VoiceGender {
  MALE
  FEMALE
}

enum VoiceStatus {
  READY
  PROCESSING
  ERROR
}

enum PhoneNumberStatus {
  ENABLED
  DISABLED
}

enum ApiKeyStatus {
  ACTIVE
  REVOKED
}

enum RecipientStatus {
  READY
  ERROR
}

// ==================== MODELS ====================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  plan      String   @default("free")
  credits   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users        UserOrganization[]
  agents       Agent[]
  campaigns    Campaign[]
  callLogs     CallLog[]
  knowledgeBases KnowledgeBase[]
  voices       Voice[]
  conversationPaths ConversationPath[]
  tools        Tool[]
  events       Event[]
  phoneNumbers PhoneNumber[]
  apiKeys      ApiKey[]

  @@index([slug])
}

model User {
  id               String     @id @default(cuid())
  email            String     @unique
  firstName        String?
  lastName         String?
  phone            String?
  timeZone         String     @default("UTC")
  password         String
  avatar           String?
  role             UserRole   @default(VIEWER)
  status           UserStatus @default(PENDING)
  twoFactorEnabled Boolean    @default(false)
  twoFactorSecret  String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  organizations UserOrganization[]
  apiKeys       ApiKey[]

  @@index([email])
  @@index([status])
}

model UserOrganization {
  userId         String
  organizationId String
  role           UserRole @default(VIEWER)
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@id([userId, organizationId])
  @@index([organizationId])
}

model Agent {
  id              String       @id @default(cuid())
  organizationId  String
  name            String
  description     String
  type            String
  status          AgentStatus  @default(INACTIVE)
  callerType      CallerType   @default(INBOUND)
  phoneNumberId   String?
  voiceId         String?
  successRate     Float        @default(0)
  totalCalls      Int          @default(0)
  configuration   Json?        // Flexible AI configuration (STT, LLM, TTS providers)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  organization       Organization           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  phoneNumber        PhoneNumber?           @relation(fields: [phoneNumberId], references: [id], onDelete: SetNull)
  voice              Voice?                 @relation(fields: [voiceId], references: [id], onDelete: SetNull)
  campaigns          Campaign[]
  callLogs           CallLog[]
  events             Event[]
  knowledgeBases     AgentKnowledgeBase[]
  tools              AgentTool[]
  conversationPaths  AgentConversationPath[]

  @@index([organizationId])
  @@index([status])
  @@index([callerType])
  @@index([phoneNumberId])
  @@index([voiceId])
}

model Campaign {
  id                   String         @id @default(cuid())
  organizationId       String
  batchName            String
  status               CampaignStatus @default(DRAFT)
  progress             Int            @default(0)
  totalCalls           Int            @default(0)
  completedCalls       Int            @default(0)
  agentId              String
  conversationPathId   String?
  firstSentence        String         @db.Text
  taskPrompt           String         @db.Text
  postCallSummary      String?        @db.Text
  startDate            DateTime?
  startTime            String?
  callStartTime        String?
  callEndTime          String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  organization       Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agent              Agent               @relation(fields: [agentId], references: [id], onDelete: Cascade)
  conversationPath   ConversationPath?   @relation(fields: [conversationPathId], references: [id], onDelete: SetNull)
  recipients         CampaignRecipient[]
  callLogs           CallLog[]

  @@index([organizationId])
  @@index([status])
  @@index([agentId])
  @@index([conversationPathId])
  @@index([startDate])
}

model CampaignRecipient {
  id          String          @id @default(cuid())
  campaignId  String
  name        String
  phoneNumber String
  notes       String?         @db.Text
  status      RecipientStatus @default(READY)
  createdAt   DateTime        @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([status])
  @@index([phoneNumber])
}

model CallLog {
  id             String     @id @default(cuid())
  organizationId String
  callType       CallType
  agentId        String
  callId         String     @unique
  customer       String?
  phoneNumber    String
  timestamp      DateTime   @default(now())
  duration       Int        @default(0) // Duration in seconds
  status         CallStatus
  campaignId     String?
  transcript     String?    @db.Text
  recordingUrl   String?
  metadata       Json?      // Additional call metadata
  createdAt      DateTime   @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agent        Agent        @relation(fields: [agentId], references: [id], onDelete: Cascade)
  campaign     Campaign?    @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([agentId])
  @@index([campaignId])
  @@index([callId])
  @@index([status])
  @@index([callType])
  @@index([timestamp])
  @@index([phoneNumber])
}

model KnowledgeBase {
  id             String               @id @default(cuid())
  organizationId String
  name           String
  description    String?              @db.Text
  fileCount      Int                  @default(0)
  websiteCount   Int                  @default(0)
  textCount      Int                  @default(0)
  status         KnowledgeBaseStatus  @default(EMPTY)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  organization Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  documents    KnowledgeBaseDocument[]
  agents       AgentKnowledgeBase[]

  @@index([organizationId])
  @@index([status])
}

model KnowledgeBaseDocument {
  id              String         @id @default(cuid())
  knowledgeBaseId String
  name            String
  type            DocumentType
  url             String?
  content         String?        @db.Text
  fileSize        Int?           // Size in bytes
  mimeType        String?
  status          DocumentStatus @default(PROCESSING)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  knowledgeBase KnowledgeBase @relation(fields: [knowledgeBaseId], references: [id], onDelete: Cascade)

  @@index([knowledgeBaseId])
  @@index([type])
  @@index([status])
}

model AgentKnowledgeBase {
  agentId         String
  knowledgeBaseId String
  createdAt       DateTime @default(now())

  agent         Agent         @relation(fields: [agentId], references: [id], onDelete: Cascade)
  knowledgeBase KnowledgeBase @relation(fields: [knowledgeBaseId], references: [id], onDelete: Cascade)

  @@id([agentId, knowledgeBaseId])
  @@index([knowledgeBaseId])
}

model Voice {
  id             String       @id @default(cuid())
  organizationId String?      // Null for system voices
  name           String
  gender         VoiceGender?
  description    String?      @db.Text
  avatar         String?      // Color hex or image URL
  tags           String[]     // Array of tags
  isCustom       Boolean      @default(false)
  status         VoiceStatus  @default(READY)
  audioUrl       String?      // Sample audio URL
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agents       Agent[]

  @@index([organizationId])
  @@index([isCustom])
  @@index([status])
}

model ConversationPath {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  useCase        String?  @db.Text
  agentSpeech    String?  @db.Text
  nodes          Json?    // Flow diagram nodes
  edges          Json?    // Flow diagram edges
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  campaigns    Campaign[]
  agents       AgentConversationPath[]

  @@index([organizationId])
}

model AgentConversationPath {
  agentId            String
  conversationPathId String
  createdAt          DateTime @default(now())

  agent            Agent            @relation(fields: [agentId], references: [id], onDelete: Cascade)
  conversationPath ConversationPath @relation(fields: [conversationPathId], references: [id], onDelete: Cascade)

  @@id([agentId, conversationPathId])
  @@index([conversationPathId])
}

model Tool {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?  @db.Text
  category       String
  logo           String?
  iconBgColor    String?
  isConnected    Boolean  @default(false)
  configuration  Json?    // Tool-specific configuration
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agents       AgentTool[]

  @@index([organizationId])
  @@index([category])
  @@index([isConnected])
}

model AgentTool {
  agentId   String
  toolId    String
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tool  Tool  @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@id([agentId, toolId])
  @@index([toolId])
}

model Event {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?  @db.Text
  isEnabled      Boolean  @default(true)
  agentId        String?
  webhookUrl     String
  triggerCount   Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agent        Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([agentId])
  @@index([isEnabled])
}

model PhoneNumber {
  id              String            @id @default(cuid())
  organizationId  String
  label           String
  phoneNumber     String            @unique
  inboundStatus   PhoneNumberStatus @default(DISABLED)
  outboundStatus  PhoneNumberStatus @default(DISABLED)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agents       Agent[]

  @@index([organizationId])
  @@index([phoneNumber])
}

model ApiKey {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  name           String
  key            String       @unique
  expirationDate DateTime?
  status         ApiKeyStatus @default(ACTIVE)
  createdAt      DateTime     @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([userId])
  @@index([key])
  @@index([status])
}
